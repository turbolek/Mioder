<div class='row'>
  <div class="col-sm-12">
    <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <p class="form-label">Nazwa</p>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Nazwa produktu", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <p class="form-label">Cena</p>
        </div>
        <div class="col-sm-8">
          <%= f.number_field :price, class: "form-control", placeholder: 0.00, min: 0, step: 0.5, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <p class="form-label">Wielkość opakowania</p>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :volume, class: "form-control", placeholder: "Wielkość opakowania", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <p class="form-label">Dostępność</p>
        </div>
        <div class="col-sm-8">
          <%= f.select :availability, ["Available", "Not available", "To be checked"]%>
        </div>
      </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      <% end %>
  </div>
</div>